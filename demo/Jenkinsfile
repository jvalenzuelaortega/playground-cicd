pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'cd demo && mvn -B -DskipTests clean package'
            }
            post {
                failure {
                   echo 'This will run only if failed'
                   bat 'dir'
                }
            }
        }
        stage('Test') {
            steps {
                bat 'cd demo && mvn test'
            }
        }
        stage('Finish') {
            steps {
                echo 'Finish revision'
            }
        }
    }
}