pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir ('demo'){
                    bat 'mvn -B -DskipTests clean package'
                    // sh 'mvn -B -DskipTests clean package'
                }
            }
            post {
                failure {
                   echo 'This will run only if failed'
                    bat 'dir'
                   // sh 'ls'
                }
            }
        }
        stage('Test') {
            steps {
                dir ('demo') {
                    bat 'mvn test'
                    //sh 'mvn test'
                }
            }
        }
        stage('Finish') {
            steps {
                dir ('demo') {
                    echo 'Finish revision'
                }
            }
        }
    }
}