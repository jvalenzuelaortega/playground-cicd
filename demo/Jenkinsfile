pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                bat 'cd demo'
                bat 'mvn -B -DskipTests clean package'
            }
            post {
                failure {
                   echo 'This will run only if failed'
                   bat 'dir'
                }
            }
        }
        stage('Test') {
            steps {
                bat 'cd demo'
                bat 'mvn test'
            }
        }
        stage('Finish') {
            steps {
                bat 'cd demo'
                bat 'mvn --version'
            }
        }
    }
}